#!/bin/bash

BASE_DIR="$HOME/Documents/Projects/other/"
cd $BASE_DIR

if [ ! -d "$BASE_DIR/elixir-ls" ] ; then
  git clone --depth 1 https://github.com/elixir-lsp/elixir-ls
else
  cd elixir-ls/
  git fetch

  if [ -z "$1" ]
  then
    git reset --hard origin/master
  else
    git reset --hard "$1"
  fi
fi

mix deps.get
mix elixir_ls.release -o ~/.vscode/extensions/jakebecker.elixir-ls-*/elixir-ls-release/
